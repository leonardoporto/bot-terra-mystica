{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "no-underscore-dangle": 0,
        "camelcase": 0,
        "class-methods-use-this": 0,
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "args": "all"
            }
        ],
        "no-param-reassign" : ["error",  {"props": false}]
    }
}
